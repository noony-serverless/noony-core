# Environment Configuration
NODE_ENV=development
PORT=3000
FUNCTIONS_PORT=8080

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
JWT_ISSUER=noony-guard-showcase
JWT_AUDIENCE=guard-demo-users
JWT_EXPIRES_IN=24h

# Redis Configuration (optional - falls back to memory cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
ENABLE_REDIS_CACHE=false

# Database Configuration (using mock database by default)
DATABASE_TYPE=mock
DATABASE_URL=

# Guard System Configuration
GUARD_CACHE_TYPE=memory
GUARD_CACHE_MAX_ENTRIES=2000
GUARD_CACHE_TTL_MS=900000
GUARD_USER_CONTEXT_TTL_MS=600000
GUARD_AUTH_TOKEN_TTL_MS=300000
GUARD_PERMISSION_STRATEGY=pre-expansion
GUARD_CONSERVATIVE_INVALIDATION=true

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
ENABLE_SECURITY_HEADERS=true
ENABLE_AUDIT_LOGGING=true

# Performance Monitoring
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_DETAILED_LOGGING=true
METRICS_COLLECTION_INTERVAL=30000
ENABLE_PROMETHEUS_METRICS=false

# Demo Configuration
ENABLE_DEMO_ENDPOINTS=true
ENABLE_TESTING_ENDPOINTS=false
AUTO_SEED_DEMO_DATA=true
DEMO_USER_COUNT=100

# Firebase Configuration (optional)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Auth0 Configuration (optional)
AUTH0_DOMAIN=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_AUDIENCE=

# Development Features
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_ENDPOINTS=true
LOG_LEVEL=debug
PRETTY_LOGS=true

# Deployment Configuration
GCLOUD_PROJECT_ID=
GCLOUD_REGION=us-central1
DOCKER_REGISTRY=
KUBERNETES_NAMESPACE=default