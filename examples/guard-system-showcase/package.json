{
  "name": "noony-guard-system-showcase",
  "version": "1.0.0",
  "description": "Comprehensive showcase of the Noony Guard System with all authentication and authorization capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "npm run dev:both",
    "dev:server": "nodemon --exec tsx src/server.ts",
    "dev:functions": "functions-framework --target=demoPlainPermissions --source=dist --watch",
    "dev:both": "concurrently \"npm run dev:server\" \"npm run dev:functions\"",
    "start": "node dist/server.js",
    "start:functions": "functions-framework --target=demoPlainPermissions,demoWildcardPermissions,demoExpressionPermissions,systemHealth --source=dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --config jest.security.config.js",
    "test:performance": "jest --config jest.performance.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "demo:all": "./scripts/demo-all-features.sh",
    "demo:performance": "./scripts/performance-test.sh",
    "demo:security": "./scripts/security-test.sh",
    "demo:cache": "./scripts/cache-optimization.sh",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy:functions": "npm run build && gcloud functions deploy guard-demo --runtime nodejs20 --trigger-http --allow-unauthenticated --source=dist",
    "deploy:run": "gcloud run deploy guard-showcase --source . --port 3000 --allow-unauthenticated",
    "seed": "tsx src/utils/seed-demo-data.ts",
    "reset": "tsx src/utils/reset-demo-data.ts"
  },
  "keywords": [
    "noony",
    "serverless",
    "authentication",
    "authorization",
    "guards",
    "jwt",
    "permissions",
    "caching",
    "security",
    "performance",
    "middleware"
  ],
  "author": "Noony Framework Team",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^12.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@google-cloud/functions-framework": "^3.3.0",
    "@noony-serverless/core": "^0.1.1",
    "@types/cors": "^2.8.19",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "fastify": "^5.3.3",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jose": "^5.2.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.1.0",
    "node-cache": "^5.1.2",
    "prom-client": "^15.1.0",
    "redis": "^4.6.0",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "artillery": "^2.0.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
