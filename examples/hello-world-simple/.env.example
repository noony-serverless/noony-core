# Noony Hello World Simple - Environment Configuration

# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Google Cloud Functions Framework Settings  
FUNCTION_TARGET=helloWorld
FUNCTION_SOURCE=src
PORT=8080

# Development Settings
DEBUG=true

# Optional: Custom greeting message (overrides default "Hello")
DEFAULT_GREETING=Hello

# Optional: Enable request ID generation for debugging
ENABLE_REQUEST_ID=true

# Optional: Custom response format
RESPONSE_FORMAT=standard